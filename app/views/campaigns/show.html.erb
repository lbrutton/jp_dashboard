<div class="jp_navbar">
  <a href="http://dsp.applift.com/" class="jp_logo_link">
    <img src="https://adv-dsplogo.s3.amazonaws.com/dsp_1459363534_513530713_DataLiftGreyWeb.png" style="width:150px;height:35px">
  </a>
  <div class="jp_sign_out signInColor">
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'jp_out_link' %>
  </div>
</div>


<div class="main-container">
  <div class="container jp_table_container">
    <p>Select the dates for your report</p>
    <%= form_tag({controller: "campaigns", action: "update"}, method: "post") do %>
      <%= label_tag("Start date:") %>
      <%= text_field_tag(:start_date) %>
      <%= label_tag("End date:") %>
      <%= text_field_tag(:end_date) %>
      <%= label_tag(:placements, "Group by placements") %>
      <%= check_box_tag(:placements) %>
      <%= submit_tag( "Submit" ) %>
    <% end %>
  </div>
  
  <div class="container">
    <table class="table table-striped table-bordered dataTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Impressions</th>
          <th>Clicks</th>
          <th>Installs</th>
          <th>CPC</th>
          <th>Spend</th>
          <th>eCPI</th>
          <th>Budget</th>
          <th>CVR</th>
          <th>CTR</th>
        </tr>
      </thead>
      <tbody>
        <strong><%= flash[:error] %></strong>
        <% Campaign.all.each do |campaign| %>
          <tr>
            <td><%= campaign.name %></td>
            <td><%= campaign.impressions %></td>
            <td><%= campaign.clicks %></td>
            <td><%= campaign.installs %></td>
            <td><%= campaign.cpc %></td>
            <td><%= campaign.spend %></td>
            <td><%= campaign.ecpi %></td>
            <td><%= campaign.budget %></td>
            <td><%= campaign.cvr %></td>
            <td><%= campaign.ctr %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

